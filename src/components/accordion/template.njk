{% set id = params.id %}
{% set headingLevel = params.headingLevel if params.headingLevel else 2 %}

<div class="govuk-accordion" data-module="accordion" id="{{ id }}">

  {% for item in params.items %}
    <div class="govuk-accordion__section {% if item.expanded %}govuk-accordion__section--expanded{% endif %}">
      <div class="govuk-accordion__section-header">
        <h{{ headingLevel }} class="govuk-accordion__heading">
          <span class="govuk-accordion__section-header-button govuk-heading-m" id="{{ id }}-heading-{{ loop.index }}">{{ item.label }}</span>
        </h{{ headingLevel }}>
        {% if item.summary.html or item.summary.text %}
          <div class="govuk-accordion__summary govuk-body" id="{{ id }}-summary-{{ loop.index }}">
            {{ item.summary.html | safe if item.summary.html else item.summary.text }}
          </div>
        {% endif %}
      </div>
      <div id="{{ id }}-panel-{{ loop.index }}" class="govuk-accordion__section-panel" aria-labelledby="{{ id }}-heading-{{ loop.index }}">
        {{ item.content.html | safe if item.content.html else item.content.text }}
      </div>
    </div>
  {% endfor %}

</div>
