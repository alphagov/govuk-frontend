{% endblock %}

{% block serviceNavigation %}
  <!-- block:serviceNavigation -->
  <!-- endblock:serviceNavigation -->
{% endblock %}

{% block headerEnd %}
  <!-- block:headerEnd -->
  <!-- endblock:headerEnd -->
{% endblock %}

{% block container %}
  <!-- block:container -->
  {{ super() }}
  <!-- endblock:container -->
{% endblock %}

{% block containerStart %}
  <!-- block:containerStart -->
  {{ govukPhaseBanner({
    tag: {
      text: "Alpha"
    },
    html: 'C\'est un nouveau service - vos <a class="govuk-link" href="#">commentaires</a> nous aideront à l\'améliorer.'
  }) }}
  {{ govukBackLink({
    href: "/"
  }) }}
  <!-- endblock:containerStart -->
{% endblock %}

{% set mainClasses = 'govuk-main-wrapper--auto-spacing app-main-class' %}

{% block main %}
  <!-- block:main -->
  {{ super() }}
  <!-- endblock:main -->
{% endblock %}

{% block content %}
  <!-- block:content -->
  {{ super() }}
  <!-- endblock:content -->
{% endblock %}

{% block containerEnd %}
  <!-- block:containerEnd -->
  <!-- endblock:containerEnd -->
{% endblock %}

{% block footer %}
  <!-- block:footer -->
  {{ super() }}
  <!-- endblock:footer -->
{% endblock %}

{% block footerStart %}
  <!-- block:footerStart -->
  <!-- endblock:footerStart -->
{% endblock %}

{% block govukFooter %}
  <!-- block:govukFooter -->
  {{ govukFooter({
    containerClasses: "app-width-container--wide",
    "meta": {
      "items": [
        {
          "href": "#1",
          "text": "Aidez-moi"
        },
        {
          "href": "#2",
          "text": "Politique de confidentialité"
        },
        {
          "href": "#3",
          "text": "Contactez-nous"
        }
      ]
    }
  }) }}
