          </svg>
          {% if (params.productName) %}
            <span class="govuk-header__product-name">
              {{ params.productName }}
            </span>
          {% endif %}
        </a>
      </div>

      {% if (params.oneLogin) %}
      {# One Login mobile menu toggle #}
      <button type="button"
        class="govuk-header__one-login-toggle govuk-js-one-login-toggle"
        aria-controls="govuk-header__one-login-menu"
        aria-label="{{ oneLoginMenuButtonText }}"
        aria-expanded="false"
        hidden>
        <span class="">{{ oneLoginShortName }}</span>
          {{ _userIcon() }}
      </button>

      {# One Login menu #}
      <nav aria-label="{{ oneLoginMenuButtonText }}" class="govuk-header__one-login-menu" id="govuk-header__one-login-menu">
        <ul class="govuk-header__one-login-menu-list">
          <li class="govuk-header__one-login-menu-item">
            <a class="govuk-header__link govuk-header__link--one-login" href="{{ oneLoginLink }}">
              <span class="">{{ oneLoginName }}</span>
              {{ _userIcon() }}
            </a>
          </li>
          <li class="govuk-header__one-login-menu-item">
            <a class="govuk-header__link" href="{{ signOutLink }}">
              Sign out
            </a>
          </li>
        </ul>
      </nav>
      {% endif %}

      {# Search form #}
      {% if params.search %}
      <form class="app-search" method="{{ params.search.method | default('get', true) }}" action="{{ params.search.action | default('/', true) }}">
        <label>
          <span class="govuk-visually-hidden">{{ params.search.labelText }}</span>
          <input class="govuk-input" type="search" name="{{ params.search.name }}" placeholder="{{ params.search.labelText }}">
        </label>

        {% if params.search %}
          <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
            Go
          </button>
        {% endif %}
      </form>
      {% endif %}

    </div>
  </div>

  {% if params.serviceName or params.navigation | length %}
  <div class="govuk-service-header">
    <div class="govuk-service-header__container govuk-width-container">

        {# Service name #}
        {% if params.serviceName %}
          {% if params.serviceUrl %}
          <a href="{{ params.serviceUrl }}" class="govuk-service-header__link govuk-service-header__link--service-name govuk-service-header__service-name">
            {{ params.serviceName }}
          </a>
          {% else %}
          <span class="govuk-service-header__service-name">
            {{ params.serviceName }}
          </span>
          {% endif %}
        {% endif %}

        {# Navigation #}
        {% if params.navigation | length %}
          <button type="button" class="govuk-service-header__toggle govuk-js-service-menu-toggle" aria-controls="navigation" {%- if params.menuButtonLabel and params.menuButtonLabel != menuButtonText %} aria-label="{{ params.menuButtonLabel }}"{% endif %} hidden>
            {{ menuButtonText }}
          </button>
          <nav id="navigation" aria-label="{{ params.navigationLabel | default(menuButtonText, true) }}" class="govuk-service-header__navigation {%- if params.navigationClasses %} {{ params.navigationClasses }}{% endif %}">
            <ul class="govuk-service-header__navigation-list">
              {% for item in params.navigation %}
                <li class="govuk-service-header__navigation-item {%- if item.active %} govuk-service-header__navigation-item--active{% endif %}">
                  {% if item.href %}
                    <a class="govuk-service-header__link" href="{{ item.href }}"
                      {{- govukAttributes(item.attributes) -}}>
                      {{ item.html | safe | trim | indent(14) if item.html else item.text }}
                    </a>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}

    </div>
  </div>
  {% endif %}
</header>
