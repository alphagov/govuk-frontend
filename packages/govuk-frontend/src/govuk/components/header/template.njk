{% from "../../macros/attributes.njk" import govukAttributes -%}
{% from "../../macros/logo.njk" import govukLogo -%}

{%- set unbranded = params.unbranded | default(govukUnbranded() if govukUnbranded is callable else govukUnbranded) -%}
{%- set homepageUrl = params.homepageUrl | default("/" if unbranded else "//gov.uk", true) -%}

<div class="govuk-header {%- if params.classes %} {{ params.classes }}{% endif %}" {{- govukAttributes(params.attributes) }}>
  <div class="govuk-header__container {{ params.containerClasses | default("govuk-width-container", true) }}">
    <div class="govuk-header__logo">
      <a href="{{ homepageUrl }}" class="govuk-header__homepage-link">
        {% if not unbranded %}
          {{ govukLogo({
            classes: "govuk-header__logotype",
            ariaLabelText: "GOV.UK"
          }) | trim | indent(8) }}
        {% endif %}

        {% if (params.productName) %}
        <span class="govuk-header__product-name">
          {{- params.productName -}}
        </span>
        {% endif %}
      </a>
    </div>
  </div>
</div>
