<div class="govuk-c-breadcrumbs{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <ol class="govuk-c-breadcrumbs__list">
  {% for item in params.items %}
    {% if item.href %}
    <li class="govuk-c-breadcrumbs__list-item">
      <a class="govuk-c-breadcrumbs__link" href="{{ item.href }}">{{ item.html | safe if item.html else item.text }}</a>
    </li>
    {% else %}
    <li class="govuk-c-breadcrumbs__list-item" aria-current="page">{{ item.html | safe if item.html else item.text }}</li>
    {% endif %}
  {% endfor %}
  </ol>
</div>
