{% set visuallyHiddenText = params.visuallyHiddenText | default("Error") -%}

<span {%- if params.id %} id="{{ params.id }}"{% endif %} class="moaland-error-message{%- if params.classes %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor -%}>
  {% if visuallyHiddenText %}<span class="moaland-visually-hidden">{{ visuallyHiddenText }}:</span> {% endif -%}
  {{ params.html | safe if params.html else params.text }}
</span>
