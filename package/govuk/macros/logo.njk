    {%- if params.ariaLabelText %}<title>{{ params.ariaLabelText }}</title>{% endif %}
    {{ (_stEdwardsCrown if not useTudorCrown else _tudorCrown) | safe | trim | indent(2) }}
    {% if rebrand and logotype %}
      {{ _logotype | safe | trim | indent(2) }}
    {% endif %}
  </svg>
  {% if not rebrand  %}
  <!--<![endif]-->
  <!--[if IE 8]>
  <img src="{{ params.assetsPath | default('/assets/images') }}/govuk-logotype-{{ 'tudor-' if useTudorCrown else '' }}crown.png" class="govuk-header__logotype-crown-fallback-image" {{ 'width=\"32\" height=\"30\"' if useTudorCrown else 'width=\"36\" height=\"32\"' }} alt="">
